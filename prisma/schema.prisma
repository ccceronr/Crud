generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Autores {
  id               Int       @id @default(autoincrement())
  nombre           String
  nacionalidad     String?
  fecha_nacimiento DateTime?

  // Relación uno a muchos con Libro
  libros           Libros[]
}

model Libros {
  id               Int       @id @default(autoincrement())
  titulo           String
  isbn             String    @unique
  año_publicacion  Int?
  genero           String?
  disponible       Boolean   @default(true)

  // Relación con Autor
  autor_id         Int
  autor            Autores     @relation(fields: [autor_id], references: [id], onDelete: Restrict)
}
